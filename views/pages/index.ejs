<% include ../partials/header %>

<div class="">
    <div class="col s12">
        <a href=" /user/add" class="btn btn-success btn-lg">Add a new user</a>
    </div>
</div>
<br>

<div class="=">
    <div class="col s12">
        <% if (items.length > 0) { %>
            <table class="table">
                <thead>
                    <tr>
                        
                        <th style="width:10%">UserID</th>
                        <th style="width:49%">FirstName</th>
                        <th style="width:49%">LastName</th>
                        <th style="width:49%">Password</th>
                        <th style="width:49%">emailaddress</th>
                        <th style="width:49%">Location</th>
                        <th style="width:49%">Date_Of_Birth</th>
                        <th style="width:49%">Username</th>
                        <th style="width:49%">Phone_Number</th>
                        <th solspan="2" style="width:20%;text-align:center">Actions
                    </th>
                </tr>
                </thead>
                <tbody>
                    <% items.forEach(function(item,index){ %>
                        <tr>
                            
                            <td style="width:5%"><%= item.UserID %></td>
                            <td style="width:49%"><%= item.FirstName %></td>
                            <td style="width:49%"><%= item.LastName %></td>
                            <td style="width:49%"><%= item.Password %></td>
                            <td style="width:49%"><%= item.emailaddress %></td>
                            <td style="width:49%"><%= item.Location %></td>
                            <td style="width:49%"><%= item.Date_Of_Birth %></td>
                            <td style="width:49%"><%= item.Username %></td>
                            <td style="width:49%"><%= item.Phone_Number %></td>
                            <td solspan="2" style="width:20%;text-align:center">
                                <a href=" /user/edit/<%= item.UserID %>" class="btn btn-success">Edit</a>
                                <a href=" /user/delete/<%= item.UserID %>" class="btn btn-success">Delete</a>
                            </td>
                        </tr>
                   <% }); %>
                </tbody>
            </table>
        <% }else{ %>
                <p><strong>There are no records available</strong></p>
        <% } %>
    </div>
</div>

<% include ../partials/footer %>